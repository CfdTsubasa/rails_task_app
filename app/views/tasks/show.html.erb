<h1>スケジュール詳細</h1>

<div class="row text-center">
  <div class="col-md-6 col-md-offset-3">
      <table>
        <tbody>
          <tr>
              <th>タイトル</th>
              <td><%= @task.title %></td>
          </tr>
          <tr>
              <th>開始日時</th>
              <td><%= @task.start_date %></td>
          </tr>
          <tr>
              <th>終了日時</th>
              <td><%= @task.end_date %></td>
          </tr>
          <tr>
              <th>終日</th>
              <td><%= @task.all_day ? '○':'×' %></td>
          </tr>
          <tr>
              <th>スケジュールメモ</th>
              <td><%= @task.memo %></td>
          </tr>
        </tbody>
      </table>
  </div>
</div>
<%= link_to "スケジュール一覧へ",tasks_path,:class=>"btn-show" %>
      <%= link_to "削除", @task, method: :delete, data: { confirm: "本当に削除しますか？" },:class=>"btn-delete" %>
      <%= link_to "更新" ,edit_task_path(@task) ,:class=>"btn-edit" %>